{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["api/**/*.ts"]
}
